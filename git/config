[user]
	name = scmeek
	email = sean@seanmeek.com
	signingkey = 3AF86523FA29B9BE
[commit]
	gpgsign = true
	verbose = true
[init]
	defaultBranch = main
[pull]
	ff = only
	rebase = true
[alias]
	unstage = reset --
	last = log -1 HEAD
	clone = clone --recursive

	a = add
	aa = add . # Add all files
	b = branch
	c = commit --allow-empty -m
	ca = commit --allow-empty -am # Commit all files
	cl = clone
	co = checkout
	cob = checkout -b
	d = diff
	ds = diff --staged
	m = merge
	p = pull
	pu = push
	rb = rebase
	st = status

	# Modified version of lg2 from https://stackoverflow.com/a/34467298
	l = log --graph --abbrev-commit --decorate --date=format:'%Y-%m-%d %I:%M %p' --format=format:'%C(bold blue)%h%C(reset) - %C(cyan)%ad%C(reset) %C(green)(%ar)%C(reset)%C(auto)%d%C(reset)%n''%w(100,10,10)%C(white)%s%C(reset) %C(magenta)- %aN%C(reset)'
[fetch]
	prune = true
	all = true
	pruneTags = true
[diff]
	colorMoved = default
	algorithm = histogram
	external = difft
[advice]
	addEmptyPathspec = false
[pager]
	branch = false
[push]
	default = current
	autoSetupRemote = true
[core]
	editor = nvim
	pager = delta
	excludesFile = ~/.config/git/ignore
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true  # Use n and N to move between diff sections
[merge]
	conflictstyle = diff3

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

# Enforce SSH
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[url "ssh://git@gitlab.com/"]
	insteadOf = https://gitlab.com/
[url "ssh://git@bitbucket.org/"]
	insteadOf = https://bitbucket.org/
