# Aliases
alias.s=sync
alias.a=all
alias.ann=annotate


# Reports

dateformat.report=a b d, H:N

## Completed yesterday
report.cy.description=Completed yesterday
report.cy.columns=status.short,description.count,tags,entry,entry.age,end
report.cy.labels=Status,Task,Tags,Created,Age,Completed
report.cy.sort=end-,description+,id+
report.cy.filter=end:yesterday and status:completed

## Completed within last week
report.cwlw.description=Completed within last week
report.cwlw.columns=status.short,description.count,tags,entry,entry.age,end
report.cwlw.labels=Status,Task,Tags,Created,Age,Completed
report.cwlw.sort=end-,description+,id+
report.cwlw.filter=end.after:today-1wk and status:completed

## Completed last week
report.clw.description=Completed last week
report.clw.columns=status.short,description.count,tags,entry,entry.age,end
report.clw.labels=Status,Task,Tags,Created,Age,Completed
report.clw.sort=end-,description+,id+
report.clw.filter=end.after:sow-1wk and status:completed


# Contexts
alias.@=context
context.spring=+spring_labs
context.home=-spring_labs or +personal or +home

context=home
